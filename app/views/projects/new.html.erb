<%= form_for(@project) do |f| %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :delivered_at %><br>
    <%= f.text_field :delivered_at, type: :date %>
  </div>

  <div class="field">
    <%= f.label :url %><br>
    <%= f.text_field :url, type: :url %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
  
<% end %>